{
    "manifest_version": 3,
    "name": "deto_x",
    "description": "Filter out tweets you don't want to see using a custom prompt.",
    "version": "0.1",
    "action": {
        "default_popup": "index.html",
        "default_icon": "fish.png"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://x.com/*",
        "https://api.openai.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://x.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}